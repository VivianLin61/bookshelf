{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "paths": {
            "@bookshelf/api/user": [
                "libs/user"
            ],
            "@bookshelf/api/generated-db-types": [
                "src/generated-db-types"
            ],
            "@bookshelf/api/health": [
                "libs/health"
            ],
            "@bookshelf/api/auth": [
                "libs/auth"
            ],
            "@bookshelf/api/book": [
                "libs/book"
            ],
            "@bookshelf/api/user-book": [
                "libs/user-book"
            ],
        }
    }
}
